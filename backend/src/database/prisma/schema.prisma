generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        Int     @id @default(autoincrement())
  name      String
  imagePath String?

  checklists Checklist[]
  orcamentos Orcamento[]
  users      User[]
}

model User {
  id           Int     @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String  @unique
  password     String
  phoneNumber  String?
  cpf          String  @unique
  storeId      Int
  refreshToken String?

  levelAcesso LevelAcesso @default(USER)
  checklists  Checklist[]
  orcamentos  Orcamento[]

  store Store @relation(fields: [storeId], references: [id])
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nome     String
  cpf      String @unique
  telefone String

  orcamentos Orcamento[]
}

model Orcamento {
  id          Int         @id @default(autoincrement())
  clienteId   Int
  placa       String
  modelo      String
  dataCriacao DateTime    @default(now())
  status      Status      @default(AGUARDANDO)
  storeId     Int
  criadoPor   Int
  checklists  Checklist[]

  cliente        Cliente         @relation(fields: [clienteId], references: [id])
  criadoPorUser  User            @relation(fields: [criadoPor], references: [id])
  store          Store           @relation(fields: [storeId], references: [id])
  orcamentoItems OrcamentoItem[]
}

model OrcamentoItem {
  id             Int           @id @default(autoincrement())
  tipoOrcamento  TipoOrcamento
  orcamentoValor Float
  orcamentoId    Int
  ativo          Boolean       @default(true)
  descricao      String
  orcamento      Orcamento     @relation(fields: [orcamentoId], references: [id])
}

model Checklist {
  id          Int           @id @default(autoincrement())
  dataCriacao DateTime      @default(now())
  orcamentoId Int
  observacoes String
  tipo        CheckListType
  storeId     Int
  userId      Int

  orcamento      Orcamento        @relation(fields: [orcamentoId], references: [id])
  store          Store            @relation(fields: [storeId], references: [id])
  user           User             @relation(fields: [userId], references: [id])
  checklistItems ChekListPhotos[]
}

model ChekListPhotos {
  id          Int       @id @default(autoincrement())
  dataCriacao DateTime  @default(now())
  checklistId Int
  path        String
  checklist   Checklist @relation(fields: [checklistId], references: [id])
}

enum Status {
  AGUARDANDO
  EXECUTANDO
  SERVICO_EXTERNO
  REPROVADO
  FINALIZADO
}

enum TipoOrcamento {
  SERVICO
  PECA
}

enum LevelAcesso {
  ADMIN
  USER
}

enum CheckListType {
  CHECK_IN
  CHECK_OUT
}
