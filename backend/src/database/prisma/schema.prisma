generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        Int     @id @default(autoincrement())
  name      String
  imagePath String?
  users     User[]

  orcamentos Orcamento[]
  checklists Checklist[]
}

model User {
  id           Int         @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String      @unique
  password     String
  phoneNumber  String?
  cpf          String      @unique
  storeId      Int
  levelAcesso  LevelAcesso @default(USER)
  refreshToken String?
  store        Store       @relation(fields: [storeId], references: [id])

  orcamentos Orcamento[]
  checklists Checklist[]
}

model Cliente {
  id       Int    @id @default(autoincrement())
  nome     String
  cpf      String @unique
  telefone String

  orcamentos Orcamento[]
}

model Orcamento {
  id          Int      @id @default(autoincrement())
  placa       String
  modelo      String
  status      Status   @default(AGUARDANDO)
  dataCriacao DateTime @default(now())

  clienteId Int
  storeId   Int
  criadoPor Int

  criadoPorUser User    @relation(fields: [criadoPor], references: [id])
  store         Store   @relation(fields: [storeId], references: [id])
  cliente       Cliente @relation(fields: [clienteId], references: [id])

  orcamentoItems OrcamentoItem[]
  checklists     Checklist[]
}

enum Status {
  AGUARDANDO
  EM_MANUTENCAO
  REJEITADO
  FINALIZADO
  CANCELADO
}

model OrcamentoItem {
  id             Int           @id @default(autoincrement())
  descricao      String
  tipoOrcamento  TipoOrcamento
  orcamentoValor Float
  orcamentoId    Int
  ativo          Boolean       @default(true)

  orcamento Orcamento @relation(fields: [orcamentoId], references: [id])
}

enum TipoOrcamento {
  SERVICO
  PECA
}

enum LevelAcesso {
  ADMIN
  USER
}

enum CheckListType {
  CHECK_IN
  CHECK_OUT
}

model Checklist {
  id          Int           @id @default(autoincrement())
  dataCriacao DateTime      @default(now())
  observacoes String
  tipo        CheckListType

  orcamentoId Int
  storeId     Int
  userId      Int

  orcamento Orcamento @relation(fields: [orcamentoId], references: [id])
  store     Store     @relation(fields: [storeId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  checklistItems ChekListPhotos[]
}

model ChekListPhotos {
  id          Int      @id @default(autoincrement())
  dataCriacao DateTime @default(now())
  descricao   String
  checklistId Int

  checklist Checklist @relation(fields: [checklistId], references: [id])
}
